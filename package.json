{
  "name": "siro",
  "description": "A simple looks theme for Ghost.",
  "demo": "https://starter.ghost.io",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=2.0.0",
    "ghost-api": "v2"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg"
  },
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan ."
  },
  "author": {
    "name": "Windfarer",
    "email": "windfarer@gmail.com",
    "url": "https://farer.org"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Windfarer/siro.git"
  },
  "bugs": "https://github.com/Windfarer/siro/issues",
  "contributors": "https://github.com/Windfarer/siro/graphs/contributors",
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "cssnano": "3.7.1",
    "gscan": "^2.0.0",
    "gulp": "3.9.1",
    "gulp-filter": "5.1.0",
    "gulp-livereload": "3.8.1",
    "gulp-postcss": "6.1.1",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "1.6.0",
    "gulp-uglify": "3.0.1",
    "gulp-util": "3.0.7",
    "gulp-watch": "4.3.8",
    "gulp-zip": "4.0.0",
    "node-sass": "^4.13.1",
    "postcss-color-function": "2.0.1",
    "postcss-custom-properties": "5.0.1",
    "postcss-easy-import": "1.0.1"
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "dependencies": {
    "han-css": "https://github.com/ethantw/Han#master",
    "milligram": "^1.3.0",
    "milligram-scss": "^1.3.0",
    "normalize.css": "^8.0.1"
  }
}