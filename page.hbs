{{!< default}}

{{#post}}
<article class="row">
    <div class="column">
        <header class="row">
            <h1 class="column column-100">{{title}}</h1>
        </header>

        {{#if custom_excerpt}}
        <div class="row">
            <p class="column column-100">{{custom_excerpt}}</p>
        </div>
        {{/if}}

        {{#if feature_image}}
        <div class="row">
            <img class="column column-100" src="{{feature_image}}" alt="{{title}}" />
        </div>

        {{/if}}
        <div class="row">
            <div class="column column-100">
                {{content}}
            </div>
        </div>

        <div class="row">
            <div class="column">
                <div id="disqus_thread"></div>
            </div>
        </div>
    </div>
</article>


<script>
    /** disqus **/
    var disqus_shortname;
    if (disqus_shortname && typeof disqus_shortname === "string") {
        var disqus_config = function () {
            this.page.identifier = "ghost-{{comment_id}}";
        };
        (function () { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = 'https://farer.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
    };
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by
        Disqus.</a></noscript>
{{/post}}

