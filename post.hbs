{{!< default}}

{{#post}}
<article class="row">
    <div class="column">
        <header class="row">
            <h1 class="column column-100"><a href="{{url}}" title="{{title}}">{{title}}</a></h1>
        </header>

        {{#if custom_excerpt}}
        <div class="row">
            <p class="column column-100">{{custom_excerpt}}</p>
        </div>
        {{/if}}

        {{#if feature_image}}
        <div class="row">
            <img class="column column-100" src="{{feature_image}}" alt="{{title}}" />
        </div>

        {{/if}}
        <div class="row">
            <div class="column column-100 post-content">
                {{content}}
            </div>
        </div>
        <p class="post-footer">
            Posted by {{#primary_author}}<a title="{{name}}" href="{{url}}">{{name}}</a>{{/primary_author}}
            {{tags prefix=" on "}} at <time class="post-date"
                datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        </p>

        <footer class="row">
            <div class="column column-50">
                {{#prev_post}}
                <label>Previous Post:</label><a href="{{url}}" title="{{title}}">{{title}}</a>
                {{/prev_post}}
            </div>
            <div class="column column-50">
                {{#next_post}}
                <label>Next Post:</label><a href="{{url}}" title="{{title}}">{{title}}</a>
                {{/next_post}}
            </div>
            {{/post}}
        </footer>

        <div class="row">
            <div class="column">
                <div id="disqus_thread"></div>
            </div>
        </div>
    </div>
</article>


<script>
    /** disqus **/
    var disqus_shortname;

    if (disqus_shortname && typeof disqus_shortname === "string") {
        var disqus_config = function () {
            this.page.identifier = "{{comment_id}}";
        };
        (function () { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = 'https://farer.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
    };
</script>

